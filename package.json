{
  "name": "tmcs-anonymous",
  "version": "1.0.0",
  "description": "A PGP based anonymous IM platform.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:go && npm run build:www",
    "build:go": "export GOPATH=$PWD:$GOPATH && cd src/tmcs-anonymous && go install",
    "build:www": "npx webpack",
    "build:watch": "npx webpack -w --mode development",
    "test": "npx mocha ./www/test/test.js",
    "protoc": "rm -r src/tmcs_msg && cd www/lib/tmcs-proto && npm run protoc:go && cp -r ./go/ ../../../src/tmcs_msg/"
  },
  "keywords": [
    "pgp",
    "im"
  ],
  "author": "mdzz.studio",
  "license": "GPL-3.0",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "mocha": "^6.0.2",
    "ts-loader": "^5.3.3",
    "ts-protoc-gen": "^0.9.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/google-protobuf": "^3.2.7",
    "@types/mocha": "^5.2.6",
    "@types/openpgp": "^4.4.2",
    "@types/protobufjs": "^6.0.0",
    "chai": "^4.2.0",
    "google-protobuf": "^3.7.0",
    "linq": "^3.1.1",
    "node-fetch": "^2.3.0",
    "openpgp": "^4.4.10",
    "tmcs-proto": "./www/lib/tmcs-proto",
    "tmcs-anonymous": "./www/lib/tmcs-anonymous"
  }
}
